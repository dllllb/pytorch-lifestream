{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "model_type": "rnn",
    "cpc": {
      "embedding_size": 800,
      "k_pos_samples": 4,
      "m_neg_samples": 252
    },
    "rnn": {
      "type": "gru",
      "hidden_size": 800,
      "bidir": false,
      "trainable_starter": "static"
    },
    "transf": {
      "shared_layers": false,
      "input_size": 64,
      "n_heads": 2,
      "dim_hidden": 64,
      "dropout": 0.1,
      "n_layers": 4,
      "max_seq_len": 1,
      "use_after_mask": false,
      "use_positional_encoding": false
    },
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "trans_date": {"in": 800, "out": 16},
        "small_group": {"in": 250, "out": 16}
      },
      "numeric_values": {
        "amount_rur": "identity"
      }
    },
    "use_normalization_layer": false,
    "lr_scheduler": {
      "step_size": 30,
      "step_gamma": 0.9025
    },
    "train": {
      "num_workers": 16,
      "batch_size": 64,
      "split_strategy": {
        "split_strategy": "SampleSlices",
        "split_count": 4,
        "cnt_min": 25,
        "cnt_max": 150,
        "is_sorted": true
      },
      "trx_dropout": 0.01,
      "max_seq_len": 1200,
      "loss": "CPCLoss",
      "lr": 0.002,
      "weight_decay": 0.0,
      "n_epoch": 100
    },
    "norm_scores": false,
    "valid": {
      "batch_size": 1024,
      "num_workers": 16,
      "split_strategy": {
        "split_strategy": "SampleSlices",
        "split_count": 5,
        "cnt_min": 25,
        "cnt_max": 100
      },
      "max_seq_len": 1200
    }
  },

  "stats": {
    "path": "runs/age_pred_ml_result.json"
  },

  "save_model": true,
  "model_path": {
    "model": "models/cpc_v2_model.p",
    "only_encoder": false
  },

  "output": {
    "path": "data/cpc_v2_embeddings",
    "format": "pickle",
    "columns": ["client_id"]
  }
}
