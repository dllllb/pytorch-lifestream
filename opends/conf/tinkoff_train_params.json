{
  "params": {
    "experiment": {
      "name": "default"
    },
    "device": "cuda",
    "rnn": {
      "type": "gru",
      "hidden_size": 64,
      "bidir": false,
      "trainable_starter": "static"
    },
    "trx_encoder": {
      "norm_embeddings": false,
      "embeddings_noise": 0.003,
      "embeddings": {
        "transaction_month": {"in": 15, "out": 4},
        "transaction_day": {"in": 50, "out": 4},
        "merchant_mcc": {"in": 500, "out": 8}
      },
      "numeric_values": {
        "transaction_amt": "identity"
      }
    },
    "lr_scheduler": {
      "step_size": 10,
      "step_gamma": 0.9025
    },
    "train": {
      "num_workers": 16,
      "batch_size": 512,
      "split_strategy": {
        "split_strategy": "SplitByCount",
        "split_count": 5,
        "cnt_min": 20,
        "cnt_max": 150
      },
      "sampling_strategy": "HardNegativePair",
      "trx_dropout": 0.01,
      "max_seq_len": 800,
      "neg_count": 5,
      "loss": "ContrastiveLoss",
      "margin": 0.5,
      "lr": 0.002,
      "weight_decay": 0.0,
      "n_epoch": 25
    },
    "valid": {
      "batch_size": 1024,
      "num_workers": 16,
      "split_strategy": {
        "split_strategy": "SplitByCount",
        "split_count": 5,
        "cnt_min": 25,
        "cnt_max": 100
      },
      "max_seq_len": 800
    }
  },

  "save_model": true,
  "model_path": {
    "model": "models/tinkoff_ml_model.p"
  }
}
